{
  "compilerOptions": {
    "target": "es2020",       // 目标语法版本
    "module": "es2020",               // 使用 ES6 模块系统
    "rootDir": "./src",            // TypeScript 源文件目录
    "outDir": "./dist",            // 编译输出目录
    "strict": true,                // 开启严格类型检查
    "esModuleInterop": true,       // 允许兼容 CommonJS 模块
    "moduleResolution": "node",    // 使用 Node 的模块解析策略
    "allowJs": true,               // 允许 JS 文件被编译
    "sourceMap": true              // 生成 source map 方便调试
  },
  "include": ["src", "vite.env.d.ts"]
}
